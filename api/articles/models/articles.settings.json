{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "articles",
    "description": "Article content types to store articles..."
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "comment": "",
    "draftAndPublish": false
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "minLength": 5
    },
    "content": {
      "type": "richtext",
      "required": true,
      "minLength": 15
    },
    "status": {
      "type": "boolean",
      "default": true,
      "required": false
    },
    "featured": {
      "type": "boolean",
      "default": false,
      "required": false
    },
    "thumbnail": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "category": {
      "model": "category"
    },
    "tags": {
      "collection": "tag",
      "via": "articles",
      "dominant": true
    },
    "published_on": {
      "type": "datetime"
    },
    "slug": {
      "type": "string",
      "unique": false
    },
    "description": {
      "type": "text"
    }
  }
}
